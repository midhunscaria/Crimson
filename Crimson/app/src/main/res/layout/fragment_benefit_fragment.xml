<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Fragments.benefit_fragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/generalBackground">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="332dp"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="19dp"
            android:text="Your Benefits Can Be Redeemed Here!"
            android:textColor="@color/Information"
            android:textSize="30dp" />

        <Button
            android:id="@+id/benefits_redeem_button"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="151dp"
            android:layout_marginRight="151dp"
            android:layout_marginBottom="172dp"
            android:background="@color/buttonColor"
            android:text="REDEEM" />

        <TextView
            android:id="@+id/benefits_ticket_info_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/benefits_redeem_button"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            android:textStyle="bold"
            android:textColor="@color/generalText"/>

    </RelativeLayout>
</LinearLayout>